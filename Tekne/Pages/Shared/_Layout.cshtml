<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tekne</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tekne.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/datatables/datatables.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container justify-content-between">
                <a class="navbar-brand">
                    <img src="/assets/logo.png" height="30" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <!-- BOTONERA DERECHA -->
                <div class="d-flex">
                    <div class="btn text-light">
                        <i class="fa fa-earth"></i>
                    </div>
                    <div class="btn text-light">
                        <i class="fa fa-user"></i>
                    </div>
                    <div class="btn">
                        <i class="fa-solid fa-right-from-bracket text-light"></i>
                    </div>
                    @* <div class="btn btn-info">
                        S
                    </div> *@
                </div>
            </div>
        </nav>
    </header>
    <div class="container justify-content-between d-flex pb-3">
        <div>
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="d-flex align-items-end">
            <button class="btn btn-primary">New Project</button>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Tekne - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/datatables.js"></script>
    <script src="~/js/projects.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>